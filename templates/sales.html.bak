{% extends 'base.html' %}
{% block title %}进销存{% endblock %}
{% block content %}
<h3>进销存</h3>
{% for category, items in grouped_products.items() %}
  <div class="card category-card mb-3">
    <div class="card-header bg-light">
      <h5 class="mb-0">{{ category }}</h5>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered mb-0">
        <thead>
          <tr>
            <th>商品</th>
            <th>库存</th>
            <th class="mobile-hidden">历史销售额</th>
            <th class="mobile-hidden">今日销售额</th>
            <th class="mobile-hidden">历史销量</th>
            <th>操作</th>
            <th>详情</th>
          </tr>
        </thead>
        <tbody>
          {% for p in items %}
          <tr>
            <td>{{ p.name }}</td>
            <td>{{ p.stock }}</td>
            <td class="mobile-hidden">{{ stat_map[p.id].all_sale }}</td>
            <td class="mobile-hidden">{{ stat_map[p.id].today_sale }}</td>
            <td class="mobile-hidden">{{ stat_map[p.id].all_qty }}</td>
            <td>
              <form method="post" action="{{ url_for('sales_operate', pid=p.id) }}" class="sales-operate-form">
                <div class="input-group input-group-sm">
                  <input type="number" name="quantity" min="1" class="form-control" placeholder="数量" required>
                  <button type="submit" name="submit_in" class="btn btn-success">进货</button>
                  <button type="submit" name="submit_out" class="btn btn-danger">销售</button>
                </div>
              </form>
            </td>
            <td><a href="{{ url_for('sales_detail', pid=p.id) }}" class="btn btn-info btn-sm">流水</a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endfor %}

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    {% if products.has_prev %}
      <li class="page-item"><a class="page-link" href="?page={{ products.prev_num }}">&laquo;</a></li>
    {% endif %}
    {% for page_num in products.iter_pages(left_edge=1, right_edge=1, left_current=1, right_current=2) %}
      <li class="page-item {% if products.page == page_num %}active{% endif %}"><a class="page-link" href="?page={{ page_num }}">{{ page_num }}</a></li>
    {% endfor %}
    {% if products.has_next %}
      <li class="page-item"><a class="page-link" href="?page={{ products.next_num }}">&raquo;</a></li>
    {% endif %}
  </ul>
</nav>
{% endblock %}
